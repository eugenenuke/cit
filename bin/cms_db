#!/bin/bash

file=/home/$1/html/wp-config.php

if [ -f $file ]; then
	ver=$(grep "^\$wp_version" /home/$1/html/wp-includes/version.php | cut -d\' -f 2)
	echo "WordPress v$ver"
	dbname=$(grep "^[^#].*DB_NAME" $file | cut -d\' -f4)
	dbuser=$(grep "^[^#].*DB_USER" $file | cut -d\' -f4)
	dbpass=$(grep "^[^#].*DB_PASSWORD" $file | cut -d\' -f4)

	echo $dbname
	echo $dbuser
	echo $dbpass

	exit 0
fi


